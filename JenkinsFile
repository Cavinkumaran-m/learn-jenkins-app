pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                sh """
                    echo 'without docker'
                    touch no-docker.txt
                """
            }
        }
        stage('w/ docker') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh """
                    echo 'with docker'
                    touch yes-docker.txt
                    ls -la
                """
            }
        }
    }
}
